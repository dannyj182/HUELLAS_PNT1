@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body class="body-back text-center">
    @if (signInManager.IsSignedIn(User))
    {
        <h3 class="h1-back text-decoration-underline text-danger">¿Estás seguro que quieres borrar al siguiente usuario?</h3>
        <form asp-action="Delete" class="d-flex flex-column justify-content-center">
            <hr />
            <div class="d-flex justify-content-center mt-2 pt-4 mb-4 flex-column border border-danger">
                <div class="d-flex justify-content-center  mt-2 ">
                    <p class="font-weight-bold mr-1">
                        Usuario :
                    </p>
                    <p>@Html.DisplayFor(model => model.UserName)</p>
                </div>
                <div class="d-flex justify-content-center  mt-2 ">
                    <p class="font-weight-bold mr-1">
                        @Html.DisplayNameFor(model => model.Email) :
                    <p> @Html.DisplayFor(model => model.Email)</p>
                </div>

            </div>

            <div asp-action="Delete" class="d-flex justify-content-center flex-column text-center">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <input type="submit" value="Borrar" class="btn btn-danger btn-form-back" />
                </div>
                <a class="mb-5 nav-link text-dark" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    }
    else
    {
        <div class="card border-danger mt-5 mb-5">
            <h1 class="h1-contacto text-danger">No tiene permisos para acceder a esta página</h1>
            <img src="~/images/403-forbidden.jpg" class="img-fluid" />
            <div class="form-group d-flex justify-content-center">
                <a asp-action="Index" asp-controller="Home" class="btn text-dark btn-form">Volver al inicio</a>
            </div>
        </div>
    }
</body>
</html>