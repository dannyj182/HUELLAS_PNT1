@model HUELLAS_PNT1.Models.Interesado

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body class="body-back text-center">
    <h3 class="h1-back text-decoration-underline text-danger ">¿Estás seguro que quieres borrar al siguiente interesado?</h3>
    <div class="d-flex flex-column justify-content-center">
        <hr />
        <div class="d-flex justify-content-center mt-2 pt-4 mb-4 flex-column border border-danger">
                <div class="d-flex justify-content-center  mt-2 ">
                    <p class="font-weight-bold mr-1">
                        @Html.DisplayNameFor(model => model.NombreCompleto) : 
                    </p>
                    <p> @Html.DisplayFor(model => model.NombreCompleto)</p>
                </div>
                <div class="d-flex justify-content-center  mt-2 ">
                    <p class="font-weight-bold  mr-1">
                        @Html.DisplayNameFor(model => model.Telefono) :
                    </p>
                    <p> @Html.DisplayFor(model => model.Telefono)</p>
                </div>
                <div class="d-flex justify-content-center  mt-2 ">
                    <p class="font-weight-bold mr-1">
                        @Html.DisplayNameFor(model => model.Email) :
                    </p>
                    <p>  @Html.DisplayFor(model => model.Email)</p>
                </div>
                <div class="d-flex justify-content-center  mt-2 ">
                    <p class="font-weight-bold  mr-1">
                        @Html.DisplayNameFor(model => model.IdMascota) :
                    </p>
                    <p>@Html.DisplayFor(model => model.IdMascota)</p>
                </div>
            </div>

            <div asp-action="Delete" class="d-flex justify-content-center flex-column text-center">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center">
                    <input type="submit" value="Borrar" class="btn btn-danger btn-form-back" />
                </div>
                <a class="mb-5 nav-link text-dark" asp-action="Index">Volver a la lista</a>
            </div>

        </div>
</body>
</html>