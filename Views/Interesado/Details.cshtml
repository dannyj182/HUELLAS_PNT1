@model HUELLAS_PNT1.Models.Interesado

@{
    ViewData["Title"] = "Details";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body class="body-back text-center">
    <h1 class="h1-back">Detalles</h1>
    <div class="d-flex flex-column text-center">
        <h4>Interesado</h4>
        <hr />
        <div class="d-flex justify-content-center mt-2 pt-4 mb-4 flex-column border border-dark">
            <div class="d-flex justify-content-center  mt-2 ">
                <p class="font-weight-bold"> @Html.DisplayNameFor(model => model.NombreCompleto) : </p> 
                <p>@Html.DisplayFor(model => model.NombreCompleto)</p>
            </div>
            <div class="d-flex justify-content-center  mt-2  ">
                <p class="font-weight-bold"> @Html.DisplayNameFor(model => model.Telefono) : </p>
                <p>@Html.DisplayFor(model => model.Telefono)</p>
            </div>
            <div class="d-flex justify-content-center mt-2 ">
                <p class="font-weight-bold">@Html.DisplayNameFor(model => model.Email) : </p>
                 @Html.DisplayFor(model => model.Email)
            </div>
            <div class="d-flex justify-content-center  mt-2  mb-2 ">
                <p class="font-weight-bold">
                    @Html.DisplayNameFor(model => model.IdMascota) : 
                </p>
                <p> @Html.DisplayFor(model => model.IdMascota)</p>
</div>

        </div>
    </div>
    <div>
        <a class="btn btn-dark btn-form-back " asp-action="Edit" asp-route-id="@Model.Id">Editar</a> 
        <a class="mb-5 nav-link text-dark" asp-action="Index">Volver a la lista</a>
    </div>
</body>
</html>

